default_platform :ios

before_all do
  setup_ci if is_ci
end

lane :unit_tests do
  run_tests(
    scheme: "UnitTests",
    device: "iPhone 14 (16.2)",
    derived_data_path: "dist"
  )
end

lane :integration_tests do
  run_tests(
    scheme: "IntegrationTests",
    device: "iPhone 14 (16.2)",
    derived_data_path: "dist"
  )
end

lane :atb_uitests do
  run_tests(
    scheme: "AtbUITests",
    device: "iPhone 14 (16.2)",
    derived_data_path: "dist"
  )
end

lane :build do
  match(type: "adhoc")
  build_app(
    scheme: "DuckDuckGo",
    configuration: "Debug",
    export_method: "ad-hoc",
    derived_data_path: "dist"
  )
end
